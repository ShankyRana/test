{
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "app/*": [
        "app/*"
      ]
    },
    "lib": [
      "ES2019",
      "dom",
      "ES2019.array",
      "ES2019.object",
      "ES2019.string",
      "ES2019.symbol",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "app/**/*",
    "app/src/**/**/*",
    "index.ts"
  ],
  "exclude": [
    "dist/**/*",
    "dist/src/**/**/*",
    "dist/*",
    "node_modules"
  ]
}